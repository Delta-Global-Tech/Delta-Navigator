version: '3.8'

services:
  # Frontend React
  frontend:
    build: .
    ports:
      - "80:80"
    container_name: delta-frontend
    environment:
      - VITE_SUPABASE_URL=${VITE_SUPABASE_URL}
      - VITE_SUPABASE_ANON_KEY=${VITE_SUPABASE_ANON_KEY}
      - VITE_API_URL=http://backend-sql:3001
      - VITE_POSTGRES_API_URL=http://backend-postgres:3002
    depends_on:
      backend-sql:
        condition: service_healthy
      backend-postgres:
        condition: service_healthy
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M
    networks:
      - delta-network
    labels:
      - "app=delta-navigator"
      - "component=frontend"

  # Backend SQL Server
  backend-sql:
    build: ./server
    ports:
      - "3001:3001"
    container_name: delta-backend-sql
    environment:
      - NODE_ENV=production
      - PORT=3001
      - SQLSERVER_HOST=${SQLSERVER_HOST}
      - SQLSERVER_PORT=${SQLSERVER_PORT}
      - SQLSERVER_USER=${SQLSERVER_USER}
      - SQLSERVER_PASSWORD=${SQLSERVER_PASSWORD}
      - SQLSERVER_DB=${SQLSERVER_DB}
      - NODE_OPTIONS=--max-old-space-size=512
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M
    networks:
      - delta-network
    labels:
      - "app=delta-navigator"
      - "component=backend-sql"
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # Backend PostgreSQL
  backend-postgres:
    build: ./postgres-server
    ports:
      - "3002:3002"
    container_name: delta-backend-postgres
    environment:
      - NODE_ENV=production
      - PORT=3002
      - POSTGRES_HOST=${POSTGRES_HOST}
      - POSTGRES_PORT=${POSTGRES_PORT}
      - POSTGRES_DATABASE=${POSTGRES_DATABASE}
      - POSTGRES_USER=${POSTGRES_USER}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
      - NODE_OPTIONS=--max-old-space-size=512
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3002/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M
    networks:
      - delta-network
    labels:
      - "app=delta-navigator"
      - "component=backend-postgres"
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # Nginx Reverse Proxy (opcional)
  nginx:
    image: nginx:alpine
    ports:
      - "8080:80"
    container_name: delta-nginx
    volumes:
      - ./docker/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      frontend:
        condition: service_healthy
      backend-sql:
        condition: service_healthy
      backend-postgres:
        condition: service_healthy
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 128M
    networks:
      - delta-network
    labels:
      - "app=delta-navigator"
      - "component=nginx"
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

volumes:
  postgres_data:

networks:
  delta-network:
    driver: bridge
